@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VMR.Models.AlbumInfo

<h2>Checkout</h2>
<div class="row">
    <div class="col-md-6">
        @foreach (var Element in ViewBag.PList)
        {
            <h2> Album: @Element.Album</h2>
            <h2> Year: @Element.Year</h2>
            <h2> Price: @Element.Price </h2>
            <div class="add-delete">
                <a class="btn btn-success" href="/Home/Delete?Album=@Element.Album">Delete</a>
            </div>

        }

    </div>
    <div class="col-md-6">

        <h3> Current Total: $@ViewBag.Sum</h3>
    </div>

</div>
